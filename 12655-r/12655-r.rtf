\par \pard\plain \ltrpar\s16\charscalex107{\*\hyphen2\hyphlead2\hyphtrail2\hyphmax0}\li0\ri0\lin0\rin0\fi220\rtlch\af0\afs20\lang255\ltrch\dbch\af0\afs20\langfe1033\ab\loch\fs20\lang1033\b 
